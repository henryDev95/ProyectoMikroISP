<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/contentClient"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorClient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:id="@+id/contentDetailClient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icoClient"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:src="@drawable/ico_clients" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad de clientes"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:textColor="@color/colorSplash"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/cantidadClient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="200"
                    android:textSize="40sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/contentDevice"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorDevice"
        app:layout_constraintTop_toBottomOf="@id/contentClient"
        app:layout_constraintStart_toStartOf="parent"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:id="@+id/contentDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icoDevice"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:src="@drawable/device_ico" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad de dispositivos"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:textColor="@color/colorSplash"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/cantidadDevice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textSize="40sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/contentPayment"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorPayment"
        app:layout_constraintTop_toBottomOf="@id/contentDevice"
        app:layout_constraintStart_toStartOf="parent"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:id="@+id/contentDetailPayment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icoPayment"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:src="@drawable/payment_ico" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cobros realizados"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:textColor="@color/colorSplash"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/cantidadPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="40sp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>