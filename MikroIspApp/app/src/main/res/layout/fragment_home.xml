<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/contentClient"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/colorActivo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:id="@+id/contentDetailClient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icoClient"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:src="@drawable/ico_clients" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CLIENTES ACTIVOS"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:textColor="@color/colorFondo"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/cantidadClient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="......."
                    android:textSize="35sp"
                    android:padding="3dp"
                    android:textColor="@color/colorFondo"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/contentEnCorte"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/colorEnCorte"
        app:layout_constraintTop_toBottomOf="@id/contentClient"
        app:layout_constraintStart_toStartOf="parent"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:id="@+id/contentDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icoDevice"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:src="@drawable/ico_clients" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
              >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CLIENTES EN CORTE"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:textColor="@color/colorFondo"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/cantidadEnCorte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="........"
                    android:textSize="35sp"
                    android:textColor="@color/colorFondo"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
           </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/logoClient"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/contentEnCorte"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_margin="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo_client"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/items"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/contentEnCorte"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_brakground"
            app:layout_constraintStart_toStartOf="parent"
            app:queryHint="@string/SearchByName"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/clientsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_client"
            />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/viewClientList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include layout="@layout/item_client_shimmer"/>
                <include layout="@layout/item_client_shimmer"/>
                <include layout="@layout/item_client_shimmer"/>
                <include layout="@layout/item_client_shimmer"/>
                <include layout="@layout/item_client_shimmer"/>
                <include layout="@layout/item_client_shimmer"/>
                <include layout="@layout/item_client_shimmer"/>
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>