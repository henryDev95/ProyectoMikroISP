<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFont"
    android:padding="5dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_brakground">
            <TextView
                android:text="@string/newClient"
                android:textStyle="bold"
                android:textSize="19sp"
                android:padding="10dp"
                android:elevation="15dp"
                android:background="@color/colorSplash"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/dni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/identificationcard"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:textStyle="normal"
                android:background="@drawable/shape_brakground"
                android:padding="13dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ico_dni"
                />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/names"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:textStyle="normal"
                android:background="@drawable/shape_brakground"
                android:padding="13dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ico_name"
                />
            <EditText
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/surname"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:textStyle="normal"
                android:background="@drawable/shape_brakground"
                android:padding="13dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ico_name"
                />
            <Spinner
                android:id="@+id/typeclient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello Tutorialwing"
                android:padding="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shape_brakground"
                />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/direction"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:textStyle="normal"
                android:background="@drawable/shape_brakground"
                android:padding="13dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ico_address"/>

            <EditText
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/telephone"
                android:inputType="number"
                android:textSize="18sp"
                android:textStyle="normal"
                android:background="@drawable/shape_brakground"
                android:padding="13dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ico_telephone"/>

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:textStyle="normal"
                android:background="@drawable/shape_brakground"
                android:padding="13dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ico_email"/>
            <EditText
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/direction"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:textStyle="normal"
                android:background="@drawable/shape_brakground"
                android:padding="13dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ico_description"/>



        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>
