<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorFondo</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorAccent">@color/colorText</item>
    </style>

    <style name="SplashStyle" parent="Theme.AppCompat.Light.NoActionBar">
         <item name="android:windowBackground">@drawable/splash_content</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
          <item name="colorOnPrimary">@color/colorText</item>
    </style>

    <style name="buttonSelector" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorFondo</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorFondo</item>
    </style>

    <style name="DatePiker" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/colorCancel</item>
    </style>
</resources>